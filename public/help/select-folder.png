<svg xmlns="http://www.w3.org/2000/svg" width="500" height="300" viewBox="0 0 500 300">
  <!-- Background -->
  <rect width="500" height="300" fill="#0a0a0a"/>
  
  <!-- App header bar -->
  <rect x="0" y="0" width="500" height="60" fill="#1a1a1a"/>
  
  <!-- App title -->
  <text x="20" y="38" fill="#e0e0e0" font-family="sans-serif" font-size="20" font-weight="600">
    TeslaCam Viewer
  </text>
  
  <!-- Select Folder Button - highlighted -->
  <g transform="translate(300, 20)">
    <rect width="180" height="40" rx="8" fill="#3b82f6"/>
    <rect x="-2" y="-2" width="184" height="44" rx="10" fill="none" stroke="#60a5fa" stroke-width="3"/>
    
    <!-- Folder icon on button -->
    <g transform="translate(15, 12)">
      <path d="M0,5 L8,5 L10,0 L18,0 L18,16 L0,16 Z" fill="white" opacity="0.9"/>
    </g>
    
    <!-- Button text -->
    <text x="45" y="26" fill="white" font-family="sans-serif" font-size="14" font-weight="600">
      Select Folder
    </text>
  </g>
  
  <!-- Content area with placeholder -->
  <rect x="20" y="80" width="460" height="200" fill="#1a1a1a" rx="8"/>
  
  <!-- Placeholder icon and text -->
  <g transform="translate(250, 140)">
    <circle cx="0" cy="0" r="40" fill="#2a2a2a"/>
    <path d="M-15,-5 L-5,-5 L-3,-10 L10,-10 L10,10 L-15,10 Z" fill="#444"/>
    
    <text x="0" y="60" fill="#666" font-family="sans-serif" font-size="14" text-anchor="middle">
      No folder selected
    </text>
    <text x="0" y="80" fill="#555" font-family="sans-serif" font-size="12" text-anchor="middle">
      Click "Select Folder" to load clips
    </text>
  </g>
  
  <!-- Arrow pointing to button -->
  <g transform="translate(290, 80)">
    <path d="M0,0 L0,-20 L-10,-20 L5,-40 L20,-20 L10,-20 L10,0 Z" fill="#ef4444"/>
    <text x="-60" y="-45" fill="#ef4444" font-family="sans-serif" font-size="12" font-weight="600">
      Click here
    </text>
  </g>
</svg>